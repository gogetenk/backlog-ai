@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string ShortDescription { get; set; }

    [Parameter]
    public string DetailedDescription { get; set; }

    [Parameter]
    public int Complexity { get; set; }
}

<div class="rounded-lg shadow-sm w-full h-full bg-gray-800 text-white border-gray-700 p-4" data-v0-t="card">
    <div class="space-y-1.5 p-6 flex flex-row items-center gap-4">
        <svg xmlns="http://www.w3.org/2000/svg"
             width="24"
             height="24"
             viewBox="0 0 24 24"
             fill="none"
             stroke="currentColor"
             stroke-width="2"
             stroke-linecap="round"
             stroke-linejoin="round"
             class="w-8 h-8 text-white">
            <path d="m19 21-7-4-7 4V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v16z"></path>
        </svg>
        <div class="grid gap-1">
            <h3 class="text-2xl font-semibold leading-none tracking-tight">@Title</h3>
            <p class="text-sm text-gray-300 text-muted-foreground">@ShortDescription</p>
        </div>
    </div>
    <div class="p-6 grid gap-2">
        <div class="text-sm font-semibold">@DetailedDescription</div>
    </div>
    <div class="p-6 grid gap-2">
        <div class="text-sm font-semibold">@Complexity</div>
    </div>
</div>